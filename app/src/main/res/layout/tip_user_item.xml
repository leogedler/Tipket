<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/productUserNameView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#484848"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/merchantUserNameView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FCB646"
        android:textStyle="bold"
        android:paddingLeft="17dp"
        android:layout_below="@+id/productUserView"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/postedByLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/merchantUserNameView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:text="@string/posted_by_label"
        android:textStyle="bold"
        android:textColor="#484848"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/posterNameView"
        android:layout_alignTop="@+id/postedByLabel"
        android:layout_toRightOf="@+id/postedByLabel"
        android:paddingLeft="5dp"
        android:textColor="#5f6260"/>




    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/productUserView"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/productUserNameView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar5"
        android:layout_alignTop="@+id/productUserView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>


</RelativeLayout>