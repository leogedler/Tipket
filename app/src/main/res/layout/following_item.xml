<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/followingPictureView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/followingNameView"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#61616e"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/followingPictureView" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/pointStar"
        android:layout_below="@+id/followingNameView"
        android:layout_toRightOf="@+id/followingPictureView"
        android:background="@drawable/points"
        android:layout_marginLeft="30dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/followingPointsView"
        android:layout_below="@+id/followingNameView"
        android:layout_toRightOf="@+id/pointStar"
        android:layout_marginLeft="5dp"
        android:paddingTop="2dp"
        android:textColor="#484848"/>


</RelativeLayout>